{
    "name": "remoteStorage",
    "id": "Remotestorage",
    "packaging_format": 1,
    "description": {
        "en": "This is a remoteStorage server implementation written in PHP.",
        "fr": "This is a remoteStorage server implementation written in PHP."
    },
    "url": "https://github.com/fkooman/php-remote-storage",
    "license": "free",
    "maintainer": {
        "name": "Anmol Sharma",
        "email": "anmol@datamol.org"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "license": "free",
    "arguments": {
        "install" : [
            {
                "name": "domain",
		            "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Remotestorage",
                    "fr": "Choisissez un nom de domaine pour Remotestorage"
                },
                "example": "example.com"
            },
            {
                "name": "path",
		            "type": "path",
                "ask": {
                    "en": "Choose a path for Remotestorage",
                    "fr": "Choisissez un chemin pour Remotestorage"
                },
                "example": "/remoteStorage",
                "default": "/remoteStorage"
            },
            {
                "name": "admin",
		            "type": "user",
                "ask": {
                    "en": "Choose an user (Not a LDAP User)",
                    "fr": "Choisissez lâ€™user (Not a LDAP User)"
                },
                "example": "johndoe"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Password for the user account (At least 6 characters long)",
                    "fr": "Password for the user account (At least 6 characters long)"
                },

                "example": "mystrongpassword"
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
